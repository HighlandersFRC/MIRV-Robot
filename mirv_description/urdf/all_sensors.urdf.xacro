<?xml version="1.0"?>
<robot name="all_sensors" xmlns:xacro="http://ros.org/wiki/xacro">

	<!-- This file unifies all sensors that can be used on simulation, defined as xacro:macros -->

	<!-- ====================================================
                         	Cameras
     ========================================================= -->
	<xacro:include filename="$(find mirv_description)/urdf/cameras/camera_sensors.urdf.xacro" />

	<!-- ====================================================
						GPS
	========================================================= -->
	<xacro:include filename="$(find mirv_description)/urdf/gps/gps_sensors.urdf.xacro" />

	<!-- ====================================================
                         	LiDAR
     ========================================================= -->
	<xacro:include filename="$(find mirv_description)/urdf/lidars/lidar_sensors.urdf.xacro" />

	<!-- ====================================================
                         	Motion
     ========================================================= -->
	<xacro:include filename="$(find mirv_description)/urdf/motion/motion_sensors.urdf.xacro" />


	<!-- ====================================================
                         	Misc
     ========================================================= -->
	<xacro:include filename="$(find mirv_description)/urdf/misc/misc_sensors.urdf.xacro" />

</robot>
